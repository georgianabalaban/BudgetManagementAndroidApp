<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Linen"
    tools:context="com.example.geo.budgetmanagement.MainActivity">


    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbarMain"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp"
    app:title="Manager de buget"
    app:titleMarginStart="110dp"
    app:titleTextColor="@color/Linen"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:background="@drawable/border"
        android:textSize="22sp"
        android:id="@+id/datepickerdate" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="59dp"
        android:background="@color/SeaGreen"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="56dp"
        android:weightSum="1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="Sold: "
            android:textSize="24sp"
            android:layout_gravity="left"
            android:layout_marginRight="25dp"/>

        <TextView
            android:id="@+id/sold"
            android:inputType="number"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/currency"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_weight="0.25"
            android:textSize="22dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/if_money_322468"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Salariu"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.12"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:textAlignment="center"
            android:id="@+id/salary"
            android:background="@drawable/border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/if_05_home_106243"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Cheltuieli casnice"
            android:layout_marginTop="17dp"
            android:layout_weight="0.15"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/chcasnice"
            android:textAlignment="center"
            android:background="@drawable/border"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/if_aiga_railtransportion_inv_134131"
            android:scaleType="fitCenter"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_weight="0.12"
            android:text="Cheltuieli pentru transport"
            android:textSize="20sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:id="@+id/chtransport"
            android:background="@drawable/border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/if_97_171456"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:layout_weight="0.12"
            android:text="Cheltuieli pentru mancare"
            android:textSize="20sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:id="@+id/chmancare"
            android:background="@drawable/border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="55dp">


        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/roundedbutton"
            android:text="+"
            android:onClick="plus"
            android:textColor="@color/green"
            android:textSize="40sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addtoDB"
            android:onClick="addDB"
            android:background="@drawable/border"
            android:layout_marginLeft="30dp"
            android:textColor="@drawable/textcolor"
            android:text="Adauga la baza de date"/>

    </LinearLayout>

</LinearLayout>
